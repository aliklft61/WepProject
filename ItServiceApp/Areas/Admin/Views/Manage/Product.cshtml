@section styles
{
    <link href="~/vendor/devextreme/dist/css/dx.light.css" rel="stylesheet" />
}

@section Scripts
{


    <script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>

    <script>
        var dataGrid = null;


        var url = "https://localhost:5001/api/ProductApi";


        $(() => {
            @*$.ajax({
                    url: '@Url.Action("GetProducts", "ProductApi")',
                    method: 'GET',
                    success: function(response) {
                        console.log(response);
                        if (response.isSuccess) {
                            userData = response.data;
                            console.log("deneme");
                            /*loadGrid();*/
                        } else {
                            alert(response.errorMessage);
                        }
                    },
                    error: function(a, b, c) {
                        console.log(a);
                        console.log(b);
                        console.log(c);
                    }
                });*@

            function loadGrid() {
                dataGrid = $('#dxGrid').dxDataGrid({
                    dataSource: DevExpress.data.AspNet.createStore({
                        key: 'productId',
                        loadUrl: `${url}/GetProducts`,
                        insertUrl: `${url}/InsertProduct`,
                        updateUrl: `${url}/Update2Product`,
                        deleteUrl: `${url}/DeleteProduct`,
                        onBeforeSend(method, ajaxOptions) {
                            ajaxOptions.xhrFields = { withCredentials: true };
                            if (ajaxOptions.data.key)
                                ajaxOptions.url += "/" + ajaxOptions.data.key;
                            console.log(ajaxOptions.data);
                        }, keyExpr: 'productId',
                        valueExpr:'value'
                    }),

                    editing: {
                        mode: 'form'
                    },
                    showColumnLines: true,
                    allowColumnResizing: true,
                    showRowLines: true,
                    rowAlternationEnabled: true,
                    showBorders: true,
                    searchPanel: {
                        visible: true,
                        width: 240,
                        placeholder: "Ara..."
                    },
                    filterRow: {
                        visible: true,
                        applyFilter: "auto"
                    },
                    headerFilter: {
                        visible: true
                    },
                    export: {
                        enabled: true,
                        fileName: `Tüm Ürünler_${parseInt(Math.random() * 1000000000)}`,
                        allowExportSelectedData: true
                    },
                    paging: {
                        pageSize: 20
                    },
                    pager: {
                        showPageSizeSelector: true,
                        allowedPageSizes: [5, 15, 30, 45],
                        showInfo: true
                    },
                    selection: {
                        mode: "multiple"
                    },
                    remoteOperations: true,
                    columns: [
                        {
                            dataField: 'imageUrl',
                            width: 200,
                            height:300,
                            cellTemplate(container, options) {
                                $('<div>')
                                    .append($('<img>', {
                                        src: "/user-assets/images/" +options.value }))
                                    .appendTo(container);
                            },
                        },
                        {
                            caption: 'productId',
                            dataField: "productId",

                        }, {
                            caption: 'name',
                            dataField: "name"
                        }, {
                            caption: 'price',
                            dataField: "price"
                        }, {
                            caption: 'description',
                            dataField: 'description',

                        }, {
                            caption: 'isApproved',
                            dataField: "isApproved",
                            dataType: 'boolean'
                        }, {
                            caption: 'isHome',
                            dataField: "isHome",
                            dataType: 'boolean'
                        }, {
                            caption: 'dateAdded',
                            dataField: "dateAdded",
                            dataType: "date",
                            format: 'dd/MM/yyyy',
                            sortOrder: "desc"
                        },{
                            caption: 'Düzenle',
                            cellTemplate: function(container, options) {
                                var current = options.data;
                                
                                var url = '@Url.Action("ProductEdit", "Manage")' + '/' + current.productId;
                                $("<a href=" + url + "/>")
                                    .text("Düzenle")
                                    .addClass('btn btn-block btn-info btn-sm')
                                    .appendTo(container);
                            },
                            formItem: { visible: false }
                        },{
                            caption: 'Sil',
                            cellTemplate: function(container, options) {
                                var current = options.data;
                                console.log(current);
                                var url = '@Url.Action("DeleteProduct", "Manage")' + '/' + current.productId;
                                $("<a href=" + url + "/>")
                                    .text("Sil")
                                    .addClass('btn btn-block btn-info btn-sm')
                                    .appendTo(container);
                            },
                            formItem: { visible: false }
                        }
                    ]

                }).dxDataGrid("instance");
            };

            loadGrid();
        });
    </script>
}
